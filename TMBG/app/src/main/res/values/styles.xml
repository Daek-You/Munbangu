<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@null</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="ReportTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="cardViewStyle">@style/CardView.Elevated</item>
    </style>

    <style name="CardView.Elevated" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
</resources> 